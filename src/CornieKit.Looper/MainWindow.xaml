<Window x:Class="CornieKit.Looper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CornieKit.Looper"
        xmlns:models="clr-namespace:CornieKit.Looper.Models"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        mc:Ignorable="d"
        Title="CornieKit Looper"
        Height="700" Width="1200"
        MinHeight="500" MinWidth="700"
        AllowDrop="True"
        Drop="VideoArea_Drop"
        DragEnter="VideoArea_DragEnter"
        DragLeave="VideoArea_DragLeave"
        Background="Black"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <!-- 悬浮面板按钮样式 -->
        <Style x:Key="OverlayButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#44FFFFFF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#66FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 删除按钮样式 -->
        <Style x:Key="DeleteButton" TargetType="Button">
            <Setter Property="Background" Value="#44FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="22"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="11">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#88FF6666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 片段列表项样式 -->
        <Style x:Key="SegmentListItem" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#22FFFFFF"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#33FFFFFF"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                    <Setter Property="Background" Value="#442196F3"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Open Video..." Command="{Binding OpenVideoCommand}"/>
            <MenuItem Header="Open Recent" ItemsSource="{Binding RecentFiles}"
                      IsEnabled="{Binding HasRecentFiles}">
                <MenuItem.ItemContainerStyle>
                    <Style TargetType="MenuItem">
                        <Setter Property="Header" Value="{Binding FileName}"/>
                        <Setter Property="ToolTip" Value="{Binding FilePath}"/>
                        <Setter Property="Command" Value="{Binding DataContext.OpenRecentFileCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                        <Setter Property="CommandParameter" Value="{Binding FilePath}"/>
                    </Style>
                </MenuItem.ItemContainerStyle>
            </MenuItem>
            <MenuItem Header="Clear Recent Files"
                      Command="{Binding ClearRecentFilesCommand}"
                      Visibility="{Binding HasRecentFiles, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Separator/>
            <MenuItem Header="About" Click="About_Click"/>
            <Separator/>
            <MenuItem Header="Exit" Click="Exit_Click"/>
        </ContextMenu>
    </Window.ContextMenu>

    <Grid x:Name="RootGrid"
          Background="Transparent">

        <!-- VideoView 作为容器，所有 overlay 放在里面 -->
        <vlc:VideoView x:Name="VideoView"
                       MediaPlayer="{Binding MediaPlayer}">
            <Grid Background="Transparent"
                  MouseMove="VideoOverlay_MouseMove"
                  MouseLeave="VideoOverlay_MouseLeave">

                <!-- 无视频时的提示 -->
                <TextBlock Text="Right-click to open video, or drag and drop"
                           Foreground="#888888"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="{Binding CurrentVideoPath, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>

                <!-- 录制指示器 -->
                <Border Background="#CC0000"
                        Padding="12,8"
                        CornerRadius="6"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0,30,0,0"
                        Visibility="{Binding IsRecording, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="10" Height="10" Fill="White" Margin="0,0,8,0"/>
                        <TextBlock Text="RECORDING"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   FontSize="13"/>
                    </StackPanel>
                </Border>

                <!-- 底部控制面板 (悬浮) -->
                <Border x:Name="BottomPanel"
                        VerticalAlignment="Bottom"
                        Opacity="0"
                        MouseEnter="BottomPanel_MouseEnter"
                        MouseLeave="BottomPanel_MouseLeave">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#00000000" Offset="0"/>
                            <GradientStop Color="#CC000000" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid Margin="20,40,20,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 进度条行 -->
                        <Grid Grid.Row="0" Margin="0,0,0,12">
                            <Slider x:Name="ProgressSlider"
                                    Value="{Binding PlaybackPosition, Mode=TwoWay}"
                                    Minimum="0"
                                    Maximum="100"
                                    Height="20"
                                    VerticalAlignment="Center"
                                    IsHitTestVisible="False"/>
                            <Border Background="Transparent"
                                    MouseLeftButtonDown="SliderOverlay_MouseDown"
                                    MouseLeftButtonUp="SliderOverlay_MouseUp"
                                    MouseMove="SliderOverlay_MouseMove"/>
                        </Grid>

                        <!-- 控制按钮行 -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- 左侧: 播放控制 + 时间 -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Style="{StaticResource OverlayButton}"
                                        Command="{Binding TogglePlayPauseCommand}">
                                    <Button.Content>
                                        <TextBlock FontSize="20">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="▶"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                            <Setter Property="Text" Value="⏸"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Button.Content>
                                </Button>

                                <TextBlock Foreground="White"
                                           FontSize="13"
                                           FontFamily="Consolas"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0">
                                    <Run Text="{Binding CurrentTimeText, Mode=OneWay}"/>
                                    <Run Text=" / " Foreground="#888"/>
                                    <Run Text="{Binding DurationText, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- 中间: 状态信息 -->
                            <TextBlock Grid.Column="1"
                                       Text="{Binding StatusMessage}"
                                       Foreground="#AAAAAA"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                            <!-- 右侧: 提示 -->
                            <TextBlock Grid.Column="2"
                                       Foreground="#666666"
                                       FontSize="11"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0">
                                <Run Text="R"/>
                                <Run Text=" record  " Foreground="#555"/>
                                <Run Text="Tab"/>
                                <Run Text=" segments" Foreground="#555"/>
                            </TextBlock>
                        </Grid>
                    </Grid>
                </Border>

                <!-- 右侧片段面板 (悬浮) -->
                <Border x:Name="SidePanel"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Stretch"
                        Width="320"
                        Visibility="Collapsed">
                    <Border.Background>
                        <SolidColorBrush Color="#000000" Opacity="0.85"/>
                    </Border.Background>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 标题栏 -->
                        <Border Grid.Row="0" Padding="16,14" BorderBrush="#33FFFFFF" BorderThickness="0,0,0,1">
                            <Grid>
                                <TextBlock Text="Loop Segments"
                                           Foreground="White"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Tab to hide"
                                           Foreground="#666666"
                                           FontSize="11"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- 片段列表 -->
                        <ListView Grid.Row="1"
                                  x:Name="SegmentListView"
                                  ItemsSource="{Binding Segments}"
                                  ItemContainerStyle="{StaticResource SegmentListItem}"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  MouseDoubleClick="SegmentListView_MouseDoubleClick">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                            <Grid>
                                                <TextBlock Text="{Binding Name}"
                                                           Foreground="White"
                                                           FontWeight="Medium"
                                                           FontSize="14"
                                                           MouseLeftButtonDown="SegmentName_MouseLeftButtonDown"
                                                           Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                                <TextBox x:Name="RenameTextBox"
                                                         Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         FontWeight="Medium"
                                                         FontSize="14"
                                                         Padding="0"
                                                         Margin="-2,0,0,0"
                                                         Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                                                         LostFocus="RenameTextBox_LostFocus"
                                                         KeyDown="RenameTextBox_KeyDown"/>
                                            </Grid>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding TimeRange}"
                                                           Foreground="#888888"
                                                           FontSize="12"/>
                                                <TextBlock Text=" · "
                                                           Foreground="#666666"
                                                           FontSize="12"/>
                                                <TextBlock Text="{Binding DurationText}"
                                                           Foreground="#888888"
                                                           FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <Button Grid.Column="1"
                                                Content="✕"
                                                Style="{StaticResource DeleteButton}"
                                                VerticalAlignment="Center"
                                                Command="{Binding DataContext.DeleteSegmentCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Delete segment"
                                                Visibility="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListViewItem}, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- 底部控制 -->
                        <Border Grid.Row="2" Padding="16,12" BorderBrush="#33FFFFFF" BorderThickness="0,1,0,0">
                            <StackPanel>
                                <Button Content="▶ Play All Segments"
                                        Command="{Binding PlayAllSegmentsCommand}"
                                        HorizontalAlignment="Stretch"
                                        Height="36"
                                        Margin="0,0,0,12"
                                        Background="#2196F3"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#1976D2"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Loop Mode"
                                               Foreground="#888888"
                                               FontSize="12"
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"/>
                                    <ComboBox Grid.Column="1"
                                              SelectedValue="{Binding SelectedLoopMode}"
                                              SelectedValuePath="Tag"
                                              FontSize="12"
                                              Background="#222222"
                                              Foreground="White"
                                              BorderThickness="0">
                                        <ComboBoxItem Content="Single (Loop current)" Tag="{x:Static models:LoopMode.Single}"/>
                                        <ComboBoxItem Content="Sequential" Tag="{x:Static models:LoopMode.Sequential}"/>
                                        <ComboBoxItem Content="Random" Tag="{x:Static models:LoopMode.Random}"/>
                                        <ComboBoxItem Content="Sequential Loop" Tag="{x:Static models:LoopMode.SequentialLoop}"/>
                                    </ComboBox>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </vlc:VideoView>

    </Grid>
</Window>
