<Window x:Class="CornieKit.Looper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CornieKit.Looper"
        xmlns:models="clr-namespace:CornieKit.Looper.Models"
        xmlns:converters="clr-namespace:CornieKit.Looper.Converters"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        mc:Ignorable="d"
        Title="CornieKit Looper"
        Height="700" Width="1200"
        MinHeight="500" MinWidth="700"
        AllowDrop="True"
        Drop="VideoArea_Drop"
        DragEnter="VideoArea_DragEnter"
        DragLeave="VideoArea_DragLeave"
        PreviewMouseMove="MainWindow_MouseMove"
        PreviewMouseLeftButtonDown="MainWindow_PreviewMouseLeftButtonDown"
        Background="Black"
        WindowStyle="SingleBorderWindow"
        KeyboardNavigation.TabNavigation="None">

    <Window.Resources>
        <converters:LoopModeToIconConverter x:Key="LoopModeToIconConverter"/>

        <!-- 全局禁用焦点虚线框 -->
        <Style TargetType="Button">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
        <Style TargetType="ListView">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
        <Style TargetType="ListViewItem">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>

        <!-- 悬浮面板按钮样式 -->
        <Style x:Key="OverlayButton" TargetType="Button">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#44FFFFFF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#66FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 菜单列表项样式：无圆角，淡灰高亮 -->
        <Style x:Key="MenuItemButton" TargetType="Button">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#22FFFFFF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#33FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 删除按钮样式 -->
        <Style x:Key="DeleteButton" TargetType="Button">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FF6666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 片段列表项样式 -->
        <Style x:Key="SegmentListItem" TargetType="ListViewItem">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#22FFFFFF"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                    <Setter Property="Background" Value="#442196F3"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- 进度条滑块（Thumb）样式 -->
        <Style x:Key="SliderThumb" TargetType="Thumb">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Ellipse Width="14" Height="14"
                                 Fill="White"
                                 Stroke="White"
                                 StrokeThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 待确认标记样式（蓝色） -->
        <Style x:Key="PendingMarkerStyle" TargetType="Ellipse">
            <Setter Property="Fill" Value="#4A90E2"/>
            <Setter Property="Opacity" Value="0.8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#4A90E2" BlurRadius="8" ShadowDepth="0" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Segment起始标记样式（绿色） -->
        <Style x:Key="StartMarkerStyle" TargetType="Polygon">
            <Setter Property="Fill" Value="#27AE60"/>
            <Setter Property="Stroke" Value="White"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="Cursor" Value="SizeWE"/>
        </Style>

        <!-- Segment结束标记样式（红色） -->
        <Style x:Key="EndMarkerStyle" TargetType="Polygon">
            <Setter Property="Fill" Value="#E74C3C"/>
            <Setter Property="Stroke" Value="White"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="Cursor" Value="SizeWE"/>
        </Style>

        <!-- 进度条样式 -->
        <Style x:Key="VideoProgressSlider" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Height="4" Background="#99FFFFFF" CornerRadius="2"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Height="4" Background="#33FFFFFF" CornerRadius="2"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource SliderThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Open Video..." Command="{Binding OpenVideoCommand}"/>
            <MenuItem Header="Open Recent" ItemsSource="{Binding RecentFiles}"
                      IsEnabled="{Binding HasRecentFiles}">
                <MenuItem.ItemContainerStyle>
                    <Style TargetType="MenuItem">
                        <Setter Property="Header" Value="{Binding FileName}"/>
                        <Setter Property="ToolTip" Value="{Binding FilePath}"/>
                        <Setter Property="Command" Value="{Binding DataContext.OpenRecentFileCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                        <Setter Property="CommandParameter" Value="{Binding FilePath}"/>
                    </Style>
                </MenuItem.ItemContainerStyle>
            </MenuItem>
            <MenuItem Header="Clear Recent Files"
                      Command="{Binding ClearRecentFilesCommand}"
                      Visibility="{Binding HasRecentFiles, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Separator/>
            <MenuItem Header="About" Click="About_Click"/>
            <Separator/>
            <MenuItem Header="Exit" Click="Exit_Click"/>
        </ContextMenu>
    </Window.ContextMenu>

    <Grid x:Name="RootGrid"
          Background="Black"
          PreviewMouseMove="MainWindow_MouseMove"
          KeyboardNavigation.TabNavigation="None"
          KeyboardNavigation.DirectionalNavigation="None">

        <!-- VideoView 作为容器，所有 overlay 放在里面 -->
        <vlc:VideoView x:Name="VideoView"
                       Background="Black"
                       MediaPlayer="{Binding MediaPlayer}"
                       Focusable="False"
                       KeyboardNavigation.TabNavigation="None"
                       KeyboardNavigation.DirectionalNavigation="None">
            <!--
                Overlay Grid 背景说明：
                - 没有视频时使用纯黑色 (#FF000000)，避免 LibVLC hwnd 白色背景在 resize 时闪现
                - 有视频时使用几乎透明 (#01000000)，让视频可见且能接收鼠标事件
                通过 InverseEmptyStringToVisibilityConverter 控制背景切换
            -->
            <Grid x:Name="VideoOverlayGrid"
                  AllowDrop="True"
                  Drop="VideoArea_Drop"
                  DragEnter="VideoArea_DragEnter"
                  DragLeave="VideoArea_DragLeave"
                  MouseMove="VideoOverlay_MouseMove"
                  MouseLeave="VideoOverlay_MouseLeave"
                  PreviewMouseLeftButtonUp="VideoOverlayGrid_PreviewMouseLeftButtonUp"
                  PreviewMouseWheel="VideoOverlayGrid_PreviewMouseWheel">

                <!-- 背景层：没有视频时黑色遮盖 hwnd，有视频时近透明 -->
                <!-- 黑色背景：无视频时显示 -->
                <Border Background="Black"
                        Visibility="{Binding CurrentVideoPath, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
                <!-- 近透明背景：有视频时显示，#01000000 确保能接收鼠标事件 -->
                <Border Background="#01000000"
                        Visibility="{Binding CurrentVideoPath, Converter={StaticResource InverseEmptyStringToVisibilityConverter}}"
                        MouseLeftButtonDown="VideoArea_MouseLeftButtonDown"/>

                <!-- 无视频时的提示 -->
                <TextBlock Text="Drop video to open"
                           Foreground="#888888"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="{Binding CurrentVideoPath, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>

                <!-- 录制指示器 -->
                <Border Background="#CC0000"
                        Padding="12,8"
                        CornerRadius="6"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0,30,0,0"
                        Visibility="{Binding IsRecording, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="10" Height="10" Fill="White" Margin="0,0,8,0"/>
                        <TextBlock Text="RECORDING"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   FontSize="13"/>
                    </StackPanel>
                </Border>

                <!-- 音量HUD -->
                <Border x:Name="VolumeHUD"
                        Background="#CC000000"
                        Width="220"
                        Height="170"
                        Padding="30,22"
                        CornerRadius="8"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="Collapsed"
                        Opacity="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Padding="20,10,20,8">
                            <TextBlock x:Name="VolumeIcon"
                                       Text="&#xE995;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="36"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock x:Name="VolumeText"
                                   Grid.Row="1"
                                   Text="100%"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   FontSize="20"
                                   HorizontalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- 顶部左侧悬浮触发区域 -->
                <Border x:Name="TopHoverZone"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Width="100"
                        Height="80"
                        Background="#01000000"
                        MouseEnter="TopHoverZone_MouseEnter"
                        MouseMove="TopHoverZone_MouseMove"/>

                <!-- 顶部汉堡菜单按钮 (悬浮) -->
                <Button x:Name="MenuButton"
                        Style="{StaticResource OverlayButton}"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Margin="20,20,0,0"
                        Width="40" Height="40"
                        Opacity="0"
                        Click="MenuButton_Click"
                        MouseEnter="TopPanel_MouseEnter"
                        MouseLeave="TopPanel_MouseLeave">
                    <Rectangle Width="24" Height="24" Fill="White">
                        <Rectangle.OpacityMask>
                            <ImageBrush ImageSource="/Assets/Icons/menu.png"/>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Button>

                <!-- 底部悬浮触发区域（使用 #01000000 确保能在 hwnd 上方接收鼠标事件） -->
                <Border x:Name="BottomHoverZone"
                        VerticalAlignment="Bottom"
                        Height="120"
                        Background="#01000000"
                        Visibility="{Binding CurrentVideoPath, Converter={StaticResource InverseEmptyStringToVisibilityConverter}}"
                        MouseEnter="BottomHoverZone_MouseEnter"
                        MouseMove="BottomHoverZone_MouseMove"/>

                <!-- 底部控制面板 (悬浮) -->
                <Border x:Name="BottomPanel"
                        VerticalAlignment="Bottom"
                        Opacity="0"
                        Visibility="{Binding CurrentVideoPath, Converter={StaticResource InverseEmptyStringToVisibilityConverter}}"
                        MouseEnter="BottomPanel_MouseEnter"
                        MouseLeave="BottomPanel_MouseLeave"
                        KeyboardNavigation.TabNavigation="None"
                        KeyboardNavigation.DirectionalNavigation="None"
                        Focusable="False">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#00000000" Offset="0"/>
                            <GradientStop Color="#CC000000" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid Margin="20,40,20,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 进度条行 -->
                        <Grid Grid.Row="0" Margin="0,0,0,12">
                            <Slider x:Name="ProgressSlider"
                                    Value="{Binding PlaybackPosition, Mode=TwoWay}"
                                    Minimum="0"
                                    Maximum="100"
                                    Height="20"
                                    Style="{StaticResource VideoProgressSlider}"
                                    VerticalAlignment="Center"
                                    IsHitTestVisible="False"/>

                            <!-- 标记Canvas层 -->
                            <Canvas x:Name="MarkerCanvas"
                                    VerticalAlignment="Stretch"
                                    IsHitTestVisible="False"
                                    ClipToBounds="True"/>

                            <Border Background="Transparent"
                                    MouseLeftButtonDown="SliderOverlay_MouseDown"
                                    MouseLeftButtonUp="SliderOverlay_MouseUp"
                                    MouseMove="SliderOverlay_MouseMove"/>
                        </Grid>

                        <!-- 控制按钮行 -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- 左侧: 播放控制 + 时间 -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Style="{StaticResource OverlayButton}"
                                        Command="{Binding TogglePlayPauseCommand}">
                                    <Button.Content>
                                        <Grid Width="24" Height="24">
                                            <Rectangle Width="24" Height="24" Fill="White"
                                                       Visibility="{Binding IsPlaying, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                                <Rectangle.OpacityMask>
                                                    <ImageBrush ImageSource="/Assets/Icons/play.png"/>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                            <Rectangle Width="24" Height="24" Fill="White"
                                                       Visibility="{Binding IsPlaying, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <Rectangle.OpacityMask>
                                                    <ImageBrush ImageSource="/Assets/Icons/pause.png"/>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </Grid>
                                    </Button.Content>
                                </Button>

                                <TextBlock Foreground="White"
                                           FontSize="13"
                                           FontFamily="Consolas"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0">
                                    <Run Text="{Binding CurrentTimeText, Mode=OneWay}"/>
                                    <Run Text=" / " Foreground="#888"/>
                                    <Run Text="{Binding DurationText, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- 中间: 状态信息 -->
                            <TextBlock Grid.Column="1"
                                       Text="{Binding StatusMessage}"
                                       Foreground="#AAAAAA"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                            <!-- 右侧: 提示 -->
                            <TextBlock Grid.Column="2"
                                       Foreground="#666666"
                                       FontSize="11"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0">
                                <Run Text="R"/>
                                <Run Text=" record  " Foreground="#555"/>
                                <Run Text="Tab"/>
                                <Run Text=" segments" Foreground="#555"/>
                            </TextBlock>
                        </Grid>
                    </Grid>
                </Border>

                <!-- 右侧片段面板 (悬浮) -->
                <Border x:Name="SidePanel"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Stretch"
                        Width="320"
                        Visibility="Collapsed"
                        KeyboardNavigation.TabNavigation="None"
                        KeyboardNavigation.DirectionalNavigation="None"
                        Focusable="False">
                    <Border.Background>
                        <SolidColorBrush Color="#000000" Opacity="0.85"/>
                    </Border.Background>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 标题栏：播放按钮 + 循环模式按钮 -->
                        <Border Grid.Row="0" Padding="12,10" BorderBrush="#33FFFFFF" BorderThickness="0,0,0,1">
                            <Grid>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <!-- 播放模式开关（电源指示器） -->
                                    <Button Style="{StaticResource OverlayButton}"
                                            Command="{Binding PlayAllSegmentsCommand}"
                                            Width="36" Height="36">
                                        <Button.ToolTip>
                                            <TextBlock>
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="Start segment playback"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsPlayingAllSegments, Mode=OneWay}" Value="True">
                                                                <Setter Property="Text" Value="Stop segment playback"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Button.ToolTip>
                                        <Rectangle Width="20" Height="20">
                                            <Rectangle.Style>
                                                <Style TargetType="Rectangle">
                                                    <Setter Property="Fill" Value="#666666"/>
                                                    <Setter Property="OpacityMask">
                                                        <Setter.Value>
                                                            <ImageBrush ImageSource="/Assets/Icons/power.png"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsPlayingAllSegments, Mode=OneWay}" Value="True">
                                                            <Setter Property="Fill" Value="#4A90E2"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Rectangle.Style>
                                        </Rectangle>
                                    </Button>
                                    <!-- 循环模式按钮 -->
                                    <Button Style="{StaticResource OverlayButton}"
                                            Command="{Binding CycleLoopModeCommand}"
                                            ToolTip="Cycle loop mode"
                                            Width="36" Height="36"
                                            Margin="4,0,0,0">
                                        <Rectangle Width="20" Height="20" Fill="White"
                                                   OpacityMask="{Binding SelectedLoopMode, Converter={StaticResource LoopModeToIconConverter}}"/>
                                    </Button>
                                </StackPanel>
                                <TextBlock Text="Tab to hide"
                                           Foreground="#666666"
                                           FontSize="11"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- 片段列表 -->
                        <ListView Grid.Row="1"
                                  x:Name="SegmentListView"
                                  ItemsSource="{Binding Segments}"
                                  SelectedItem="{Binding SelectedSegment, Mode=TwoWay}"
                                  ItemContainerStyle="{StaticResource SegmentListItem}"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  AllowDrop="True"
                                  PreviewMouseLeftButtonDown="SegmentListView_PreviewMouseLeftButtonDown"
                                  MouseMove="SegmentListView_MouseMove"
                                  DragOver="SegmentListView_DragOver"
                                  Drop="SegmentListView_Drop"
                                  MouseDoubleClick="SegmentListView_MouseDoubleClick">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                            <Grid>
                                                <TextBlock Text="{Binding Name}"
                                                           Foreground="White"
                                                           FontWeight="Medium"
                                                           FontSize="14"
                                                           MouseLeftButtonDown="SegmentName_MouseLeftButtonDown"
                                                           Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                                <TextBox x:Name="RenameTextBox"
                                                         Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         FontWeight="Medium"
                                                         FontSize="14"
                                                         Padding="0"
                                                         Margin="-2,0,0,0"
                                                         Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                                                         LostFocus="RenameTextBox_LostFocus"
                                                         KeyDown="RenameTextBox_KeyDown"/>
                                            </Grid>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding TimeRange}"
                                                           Foreground="#888888"
                                                           FontSize="12"/>
                                                <TextBlock Text=" · "
                                                           Foreground="#666666"
                                                           FontSize="12"/>
                                                <TextBlock Text="{Binding DurationText}"
                                                           Foreground="#888888"
                                                           FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <Button Grid.Column="1"
                                                Content="✕"
                                                Style="{StaticResource DeleteButton}"
                                                VerticalAlignment="Center"
                                                Command="{Binding DataContext.DeleteSegmentCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Delete segment"
                                                Visibility="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListViewItem}, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>
            </Grid>
        </vlc:VideoView>

        <!-- 菜单弹出层：直接显示历史记录列表 (放在 VideoView 外部避免 hwnd 坐标问题) -->
        <Popup x:Name="MenuPopup"
               PlacementTarget="{Binding ElementName=MenuButton}"
               Placement="Right"
               HorizontalOffset="5"
               VerticalOffset="0"
               AllowsTransparency="True"
               StaysOpen="False">
            <Border Background="#E6000000"
                    BorderBrush="#33FFFFFF"
                    BorderThickness="1"
                    MaxHeight="400">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="4" Opacity="0.7"/>
                </Border.Effect>
                <Grid>
                    <!-- 有历史记录时显示列表 + 清空按钮 -->
                    <StackPanel Visibility="{Binding HasRecentFiles, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      MaxHeight="320">
                            <ItemsControl ItemsSource="{Binding RecentFiles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource MenuItemButton}"
                                                Command="{Binding DataContext.OpenRecentFileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding FilePath}"
                                                Click="MenuPopup_ItemClick"
                                                Height="36"
                                                Width="280"
                                                HorizontalContentAlignment="Left"
                                                Padding="12,0"
                                                ToolTip="{Binding FilePath}">
                                            <TextBlock Text="{Binding FileName}"
                                                       Foreground="White"
                                                       FontSize="12"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        <!-- 分割线 -->
                        <Border Height="1" Background="#33FFFFFF"/>
                        <!-- 清空历史 -->
                        <Button Style="{StaticResource MenuItemButton}"
                                Command="{Binding ClearRecentFilesCommand}"
                                Click="MenuPopup_ItemClick"
                                Height="36"
                                Width="280"
                                HorizontalContentAlignment="Left"
                                Padding="12,0">
                            <TextBlock Text="清空历史" Foreground="#888888" FontSize="12"/>
                        </Button>
                    </StackPanel>
                    <!-- 无历史记录时显示提示 -->
                    <TextBlock Text="No recent files"
                               Foreground="#888888"
                               FontSize="12"
                               Padding="16,12"
                               Visibility="{Binding HasRecentFiles, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                </Grid>
            </Border>
        </Popup>

    </Grid>
</Window>
